{% extends "layout.njk" %}

{% block head %}
    <title>Alunos</title>
{% endblock %}

{% block content %}
    
    <div class="card">

        <section class="avatar" style="background: url(https://images.unsplash.com/photo-1471970471555-19d4b113e9ed?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80) no-repeat center center / cover;"></section>

        <section class="details">
            
            <h3>Detalhes</h3>
            
            <div class="item">
                <div>Aluno</div>
                <div>{{ aluno.nome }}</div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>{{ aluno.dataNasc }} </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if aluno.sexo == 'M' else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Número de Matrícula</div>
                <div>{{ aluno.numMatricula }}</div>   
            </div>

             <div class="item">
                <div>Curso</div>
                <div>{{ aluno.curso }}</div>
            </div>

            <a href="/alunos/{{ aluno.id }}/edit" class="button">Editar</a>

        </section>

    </div>

{% endblock %}