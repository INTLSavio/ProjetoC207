{% extends "layout.njk" %}

{% block head %}
    <title>Alunos</title>
{% endblock %}

{% block content %}
    
    <div class="card table-container">

        <div class="header">
            <a class="button" href="/alunos/create">Novo</a>
            
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Aluno</th>
                    <th>N° Matrícula</th>
                    <th>Curso</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for aluno in alunos %}
                <tr>
                    <td>{{ aluno.nome }}</td>
                    <td>{{ aluno.numMatricula }}</td>
                    <td>{{ aluno.curso }}</td>
                    <td><a href="/alunos/{{aluno.id}}"> Ver </a></td>
                </tr>
                {% endfor %}
            </tbody>
            
        </table>
        
    </div>

{% endblock %}